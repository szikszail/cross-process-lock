{
  "name": "cross-process-lock",
  "version": "2.0.0",
  "description": "Cross-process file locking solution with lock-queue",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "tsc:watch": "tsc -w",
    "build": "npm run clean && npm run compile && npm run copyToDist && npm test -- --coverage && npm run typedoc",
    "buildUpdate": "npm run compile && npm run copyToDist && npm run postbuild",
    "copyToDist": "copyfiles -f *.txt *.md package.json dist",
    "typedoc": "typedoc --exclude **/bin/**/*.ts --exclude **/cli.ts --out ./dist/docs/api ./src",
    "clean": "rimraf ./dist ./reports",
    "test": "cross-env JEST_JUNIT_OUTPUT=./reports/junit.xml jest",
    "tslint": "tslint -c tslint.json ./src/**/*.ts ./tests/**/*.ts",
    "compile": "tsc && npm run tslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szikszail/cross-process-lock.git"
  },
  "keywords": [
    "file",
    "lock"
  ],
  "author": "Laszlo Szikszai <sziklaszlo@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/szikszail/cross-process-lock/issues"
  },
  "homepage": "https://github.com/szikszail/cross-process-lock#readme",
  "files": [
    "*.js",
    "*.d.ts",
    "*.js.map"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "fs-extra": "^9.1.0",
    "log4js": "^6.3.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "typedoc": "^0.20.19",
    "typescript": "^4.1.3",
    "proxyquire": "^2.1.3",
    "sinon": "^9.2.4",
    "yargs": "^16.2.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "testResultsProcessor": "jest-junit",
    "coverageDirectory": "./dist/test/coverage",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverageFrom": [
      "src/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
